<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('_layouts/head'); %>
        <link rel="stylesheet" href="./css/form.min.css" />
        <link rel="stylesheet" href="./css/container.min.css" />
</head>

<body>
    <div class="ui container">
        <div class="ui grid">
            <div class="row">
                <div class="column">
                    <form action="/admin/pages/newPage" enctype="multipart/form-data" method="POST" class="ui form">
                        <div class="field">
                            <label>Name</label>
                            <input type="text" name="name" placeholder="Name" />
                        </div>
                        <div class="field">
                            <label>Icon</label>
                            <input type="file" name="image" placeholder="Image" />
                        </div>
                        <div class="field">
                            <label>Icon</label>
                            <textarea name="text" id="editor" cols="30" rows="10"></textarea>
                        </div>
                        <button class="ui button" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('_layouts/ckeditor'); %>
</body>

</html>